{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@comaqui/typescript-config/react-library.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "lib": [
      "dom",
      "ES2020"
    ],
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "verbatimModuleSyntax": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "."
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}